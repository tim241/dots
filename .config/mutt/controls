# vim: filetype=muttrc
bind index g noop
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index gs "<change-folder>=Sent<enter>" "Go to sent"
macro index gd "<change-folder>=Drafts<enter>" "Go to drafts"
macro index gj "<change-folder>=Junk<enter>" "Go to junk"
macro index gt "<change-folder>=Trash<enter>" "Go to trash"
# Sidebar stuff
bind index,pager \Ck sidebar-prev
bind index,pager \Cj sidebar-next
bind index,pager \Co sidebar-open
bind index,pager \Cp sidebar-prev-new
bind index,pager \Cn sidebar-next-new
# Sync mail using offlineimap
macro index S "<shell-escape>offlineimap<enter><enter>" "run offlineimap to sync all mail"
